{% extends '/layouts/main.twig' %}
{% block title %} Пользователи {% endblock %}
{% block content %}

<h1>Все пользователи</h1>
    {% for user in users.getItems %}
    <div style="display: flex; justify-content: space-around; align-items: baseline">
    <p>Имя: {{ user.name }}</p>
    <p>Логин: {{ user.login }} </p>
    <a style="text-decoration: none; color: #000000" href="?c=user&a=one&id={{ user.id }}">Подробнее</a>
    <br>
    </div>
    {% endfor %}
    {% if users.getUrls() is not empty %}
        <p>Страницы</p>
        {% for page, urls in users.getUrls() %}
            <a href="{{ urls }}">{{ page }}</a>
        {% endfor %}
    {% endif %}

{% endblock %}
